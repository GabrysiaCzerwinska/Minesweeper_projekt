<Window x:Class="Minesweeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minesweeper"
        mc:Ignorable="d"
        Title="Cyber Minesweeper 2077" Height="800" Width="960" Background="#FF080830">
    <Grid x:Name="grid1" Height="760" Width="960" HorizontalAlignment="Center" VerticalAlignment="Bottom">
        <Button x:Name="normal" Content="Normal" HorizontalAlignment="Center" Margin="-0,60,0,0" VerticalAlignment="Top" Height="40" Width="80"/>
        <Button x:Name="easy" Content="Easy" HorizontalAlignment="Left" Margin="100,60,0,0" VerticalAlignment="Top" Height="40" Width="80"/>
        <Button x:Name="hard" Content="Hard" HorizontalAlignment="Right" Margin="0,60,100,0" VerticalAlignment="Top" Height="40" Width="80"/>
        <TextBlock x:Name="TimerBox" HorizontalAlignment="Left" Height="23" Margin="100,20,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Background="#FF080830" Foreground="White"/>
        <Grid x:Name="grid" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Height="600" Width="900" Background="MidnightBlue"/>
    </Grid>
</Window>
